{
  "editor.minimap.maxColumn": 80,
  "editor.minimap.renderCharacters": false,
  "editor.autoIndent": "full",
  "[css]": {
    "editor.tabSize": 2
  },
  "[scss]": {
    "editor.tabSize": 2
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "files.trimTrailingWhitespace": true,
  "eslint.enable": true,
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  }
}
